{
  "name": "tedxregionallens",
  "fullName": "TEDx Regional Lens",
  "version": "0.0.1",
  "description": "Tedx Regional Lens is a web app displaying all the TEDx conferences in a country.",
  "keywords": [
    "tedx",
    "conferences",
    "regional",
    "lens"
  ],
  "joshfire": {
    "images": {
      "small": "marketing/image-small.png",
      "big": "marketing/image-big.png"
    },
    "devices": [
      {
        "devices": "*",
        "startfile": "app/index.html",
        "images": "marketing/image-small.png",
        "screenshots": [
          "marketing/image-small.png"
        ]
      }
    ],
    "datasources": {
      "tweets": {
        "title": "Comments",
        "description": "Comments on social networks, e.g. tweets from an hashtag",
        "inputType": [
          "Article/Status"
        ]
      },
      "youtube": {
        "title": "Playlists youtube",
        "description": "Playlist of events and talks presented by TEDx",
        "inputType": [
          "VideoObject"
        ]
      },
      "spreadsheetslive": {
        "title": "Tedx Event Live",
        "description": "Datasource that returns the TEDx event live",
        "inputType": [
          "GeoCoordinates"
        ]
      }/*,
      "tedxeventlocations": {
        "title": "TEDx Events",
        "description": "Display the recent TEDx in France",
        "inputType": [
          "Event"
        ]
      }*/
    },
    "options": {
      "schema": {
        "language": {
          "title": "Language",
          "type": "select",
          "enum": [
            "auto",
            "fr",
            "en"
          ]
        },
        "url": {
          "title": "URL Advertisement",
          "type": "string"
        },
        "idwidget": {
          "title": "ID Twitter widget",
          "type": "string"
        }
      },
      "form": [
        "datasources.tweets",
        {
          "key": "language",
          "titleMap": {
            "auto": "Automatic",
            "fr": "French",
            "en": "English"
          }
        },
        "datasources.youtube",
        "datasources.spreadsheetslive",
        // "datasources.tedxeventlocations",
        "url",
        "idwidget"
      ]
    }
  }
}