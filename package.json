{
  "name": "tedxregionallens",
  "fullName": "TEDx Regional Lens",
  "version": "0.0.1",
  "description": "Tedx Regional Lens is a web app displaying all the TEDx conferences in a country.",
  "keywords": [
    "tedx",
    "conferences",
    "regional",
    "lens"
  ],
  "joshfire": {
    "images": {
      "small": "marketing/image-small.png",
      "big": "marketing/image-big.png"
    },
    "devices": [
      {
        "devices": "*",
        "startfile": "app/index.html",
        "images": "marketing/image-small.png",
        "screenshots": [
          "marketing/image-small.png"
        ]
      }
    ],
    "datasources": {
      "tweets": {
        "title": "Comments",
        "description": "Comments on social networks, e.g. tweets from an hashtag",
        "inputType": [
          "Article/Status"
        ]
      },
      "youtube": {
        "title": "Playlists youtube",
        "description": "Playlist of events and talks presented by TEDx",
        "inputType": [
          "VideoObject"
        ]
      }
    },
    "options": {
      "schema": {
        "language": {
          "title": "Language",
          "type": "select",
          "enum": [
            "auto",
            "fr",
            "en"
          ]
        },
        "abouthtml": {
          "title": "About (HTML)",
          "type": "string"
        },
        /*
        todo map w/ specific ted ids https://api.ted.com/v1/tedx_event_locations.json?limit=100&api-key=x&country_id=77
        "country": {
          "type": "string",
          "title": "Country",
          "description": "Enter a country code (us, fr, ..)"
        },
        */
        "api_key" : {
          "type": "string",
          "title": "API key",
          "description": "Enter your TED API key here. The key is optional to preview your app but required at deployment stage. Follow the instructions on <a href='http://developer.ted.com/' target='_blank'>TED's Web site</a> to obtain an API key.",
          "joshfire:requiredFor": ["deploy"]
        },
        "skipnoimage":{
          "type": "boolean",
          "title":"Skip events without image",
          "default":true
        }
      },
      "form": [
        "datasources.tweets",
        {
          "key": "abouthtml",
          "type": "wysihtml5"
        },
        {
          "key": "language",
          "titleMap": {
            "auto": "Automatic",
            "fr": "French",
            "en": "English"
          }
        },
        "datasources.youtube",
        {
          "key": "api_key",
          "type": "authfieldset",
          "items": [
            "api_key"
          ]
        }
      ]
    }
  }
}